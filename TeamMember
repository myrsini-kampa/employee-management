    public TeamMember(String id, String firsName, String lastName, String role, String Department, String Email, String level, String mobileNumber, String[] contractType, String[] workSchedule, String availabilityNotes, String PTOPlannedDays, int PTONumberOfDays, String[] workMode, String weeklySchedule, String skills, String trainingLog, String collaborationMap, String education) {
        this.id = id;
        this.firsName = firsName;
        this.lastName = lastName;
        this.role = role;
        this.Email = Email;
        this.Department = Department;
        this.level = level;
        this.mobileNumber = mobileNumber;
        this.contractType = contractType;
        this.workSchedule = workSchedule;
        this.availabilityNotes = availabilityNotes;
        this.PTOPlannedDays = PTOPlannedDays;
        this.PTONumberOfDays = PTONumberOfDays;
        WorkMode = workMode;
        WeeklySchedule = weeklySchedule;
        this.skills = skills;
        this.trainingLog = trainingLog;
        this.collaborationMap = collaborationMap;
        this.Education = education;
    }

    public String getId() {
