    @Override
    public String toString() {
        return "id: " + id + " , First Name: " + firsName + " , Last Name: " + lastName + " , Department: " + Department + " , Role: " + role + " , Mobile-Number: " + mobileNumber + " , E-mail: " + Email + " , Level: " + level;
    }

    //ΜΕΘΟΔΟΙ

    // getFullName()

    public String EmployeesName() {
        String[][] employeeInfo = new String[][]{
                {"id: ", id},
                {"First Name ", firsName},
                {"Last Name", lastName},
                {"Department", Department},
                {"Role ", role},
                {"Level ", level},
                {"E-mail", Email},
                {"Mobile Number", mobileNumber},
                {"Technical Skills ", skills},
                {"Education ", Education},
                {"Training ", trainingLog}
        };
        return employeeInfo.toString();
    }

    public String[] choosingFromList(String[] contractType, String[] workMode, String[] workSchedule) {
        for (int i = 0; i < contractType.length; i++) {

            if (contractType[i].equals("PERMANENT")) {
                return new String[]{"PERMANENT"};
            }
            if (contractType[i].equals("FIXED_TERM")) {
                return new String[]{"FIXED_TERM"};
            }
            if (contractType[i].equals("CONTRACTOR")) {
                return new String[]{"CONTRACTOR"};
            }
            if (contractType[i].equals("INTERN")) {
                return new String[]{"INTERN"};
            }
            if (contractType[i].equals("SECONDMENT")) {
                return new String[]{"SECONDMENT"};
            }
        }

        for (int j = 0; j < workMode.length; j++) {
            //"Hybrid", "On Site", "Remote"
            if (workMode[j].equals("Hybrid")) {
                return new String[]{"Hybrid"};
            }
            if (workMode[j].equals("Remote")) {
                return new String[]{"Remote"};
            }
            if (workMode[j].equals("On Site")) {
                return new String[]{"On Site"};
            }
        }
        return contractType;
    }
}

